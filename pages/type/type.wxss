/* pages/shop/shop.wxss */

.scroll{
  width: 96%;
  overflow: hidden;
  margin-left: 2%;
  margin-right: 2%;
  white-space: nowrap;
  display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.item_one{
  height: auto;
  margin-left: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  border: 1px solid #efefef;
  padding: 10rpx;
  display: inline-block;
}

.item_two{
  height: auto;
  margin-left: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  border: 1px solid #efefef;
  padding: 10rpx;
  display: inline-block;
}

.artical{
  padding: 30rpx;
}

.artical_new{
  width: 40rpx;
  height: 30rpx;
}


.artical-message{
  font-size: small;
  color: #aaa
}

.divider{
  width: 100%;
  height: 5rpx;
  background-color: #efefef;
}

.artical-bottom {
  margin-top: 15rpx;
  display: flex;
  justify-content: space-between;
}

.load-more{
  font-size: small;
  padding: 20rpx;
  display: flex;
  justify-content: center;
}
